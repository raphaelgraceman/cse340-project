<h1><%= title %></h1>



<form action="/inv/update/inv_id" method="post" style="margin-left: 10%; display: block; margin-right: 10%; width:auto; background-color: rgb(3, 42, 45);" id="invForm">
  <fieldset style="width: 100%;">
  
    <label for="classification_id" style="margin-left: 2px 35%; margin-top: 20px; display: inline-block;" id="classificationSelect" >Choose a classification:</label>
      <select id="classification_id" name="classification_name" id="classificationList">
        <option value="classification_id">Custom</option>
        <option value="classification_id">Sedan</option>
        <option value="classification_id">Sport</option>
        <option value="classification_id">SUV</option>
        <option value="classification_id">Truck</option>
      </select>


    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" required class="invInputs" placeholder="<%= inv_make %>" value="<%= inv_make %>"><br><br>

    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" id="inv_model" required class="invInputs" value="At least 3 characters"><br><br>

    <label for="inv_description" >Description:</label>
    
    <textarea type="text" name="inv_description" id="inv_description" required  style="height: 80px; width: 90%;" required class="invInputs" value=""> <%=inv_description %></textarea><br><br>
    
    <label for="inv_image">Image URL:</label>
    <input type="url" name="inv_image" id="inv_image" class="invInputs" placeholder="inv_image" value="<%= inv_image %>" required><br><br><br>

    <label for="inv_thumbnail">Thumbnail:</label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required class="invInputs" value="<%= inv_thumbnail %>"><br><br><br>

    <label for="inv_price">Price:</label>
    <input type="text" name="inv_price" id="inv_price" required class="invInputs" value="<%= inv_price %>"><br><br><br>

    <label for="inv_year">Year:</label>
    <input type="text" name="inv_year" id="inv_year" required class="invInputs" value="<%= inv_year %>"><br><br><br>

    <label for="inv_miles">Miles:</label>
    <input type="number" name="inv_miles" id="inv_miles" required class="invInputs" value="<%= inv_miles %>"><br><br><br>

    <label for="inv_color">Color:</label>
    <input type="text" name="inv_color" id="inv_color" required class="invInputs" value="<%= inv_color %>"><br><br><br>

    <button type="hidden" name="inv_id" id="vehicleSubmitBtn" style="margin-left: 30%; background-color: rgb(99, 0, 0); width: 30%; color: rgb(255, 255, 255); border-radius: 12px; padding: 2px; cursor: pointer; "
     <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %> >Update Vehicle</button>
   

  </fieldset>
</form>
